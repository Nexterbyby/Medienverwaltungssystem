<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vbox" alignment="CENTER" prefHeight="480.0" prefWidth="640.0" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.bbw.MainviewController">
   <children>
      <Label text="Database" />
      <ListView fx:id="view2" prefHeight="246.0" prefWidth="600.0" />
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button mnemonicParsing="false" onAction="#createCSV" text="Convert to CSV" />
            <Button mnemonicParsing="false" onAction="#createExcel" text="Convert to EXCEL" />
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Button fx:id="editBook" onAction="#editBook" text="EditBooks" />
                  <Button fx:id="editGames" onAction="#editGame" text="EditGames" />
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Button fx:id="createBook" onAction="#createBook" text="CreateBooks" />
                  <Button fx:id="createGame" onAction="#createGame" text="Create Games" />
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="ID" />
                  <TextField prefHeight="26.0" prefWidth="36.0" />
               </children>
            </VBox>
         </children>
      </HBox>
      <Button fx:id="query_btn" mnemonicParsing="false" onAction="#actionHibernate" text="test hibernate" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
